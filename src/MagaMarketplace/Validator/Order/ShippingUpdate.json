{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "definitions": {
        "Carrier": {
            "type": "object",
            "properties": {
                "documentNumber": {
                    "type": "string",
                    "description": "CNPJ",
                    "maxLength": 18
                },
                "name": {
                    "type": "string",
                    "description": "Nome",
                    "maxLength": 100
                }
            },
            "required": ["name"]
        },
        "Invoice": {
            "type": "object",
            "properties": {
                "number": {
                    "type": "integer",
                    "description": "Número",
                    "minimum": 1,
                    "maximum": 999999999
                },
                "line": {
                    "type": "string",
                    "description": "Série",
                    "maxLength": 3
                },
                "issueDate": {
                    "type": "string",
                    "description": "Data/hora de emissão",
                    "format": "date-time"
                },
                "accessKey": {
                    "type": "string",
                    "description": "Chave de acesso",
                    "maxLength": 50
                }
            },
            "required": ["number", "line", "issueDate", "accessKey"]
        }
    },
    "properties": {
        "carrier": {
            "$ref": "#/definitions/Carrier",
            "description": "Transportadora"
        },
        "trackingNumber": {
            "type": "string",
            "description": "Código de rastreio na transportadora",
            "maxLength": 30
        },
        "trackingUrl": {
            "type": "string",
            "description": "Url da transportadora para o rastreamento do pedido",
            "format": "uri",
            "maxLength": 255
        },
        "invoice": {
            "$ref": "#/definitions/Invoice",
            "description": "Nota fiscal"
        }
    },
    "required": ["trackingNumber"]
}