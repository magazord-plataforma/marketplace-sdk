{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "description": "Identificador"
        },
        "title": {
            "type": "string",
            "description": "Título"
        },
        "date": {
            "type": "string",
            "description": "Data",
            "format": "date-time"
        },
        "sellerId": {
            "type": "integer",
            "description": "Lojista"
        },
        "limit": {
            "type": "integer",
            "description": "Quantidade de registros. Padrão: 50",
            "minimum": 0,
            "maximum": 50
        },
        "offset": {
            "type": "integer",
            "description": "Posição inicial da consulta. Padrão: 0",
            "minimum": 0
        },
        "sort": {
            "type": "string",
            "description": "Ordenação dos registros"
        },
        "sortDirection": {
            "type": "string",
            "description": "Direção da ordenação dos registros",
            "enum": ["asc", "desc"]
        }
    },
    "required": []
}